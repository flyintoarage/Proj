<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Штаб: Экипаж, прием?"
            android:textColor="#000000"
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Y: Штаб,судя по радару, мы почти на месте. Отсылаем фотографию"
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Z: Тут красиво: горы и...облака?"
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q: Это плазменно-пылевые облака,образовавшиеся после метеоритного дождя."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Штаб: оглядитесь, вы видите вход в тоннель, который ведёт к станции?"
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Y: Так точно, штаб. Штаб? Чёрт возьми, связь накрылась..."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X: Ну хоть инопланетян не видно... Ладно, выдвигаемся."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 напряженных минут блужданий в темноте спустя отряд добрался до конца тонннеля"
            android:textColor="#535353"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X: Кажется мы на месте"
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q: Теперь остается только открыть дверь..."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Z: Впринципе, я могу её взорвать."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X: Или я могу покопаться в замке."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q: Я думаю, что где-то здесь должен быть открывающий механизм или ключ, поискать его будет проще и безопаснее."
            android:textColor="#000000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X: Y, за тобой последнее слово."
            android:textColor="#000000"
            android:textSize="19dp" />
        <Button
            android:id="@+id/buttonHack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style2"
            android:textColor="#000000"
            android:text="X, попробуй взломать эту штуку">
        </Button>
        <Button
            android:id="@+id/buttonBoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style2"
            android:textColor="#000000"
            android:text="Я согласен на большой бум">
        </Button>
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style2"
            android:textColor="#000000"
            android:text="давайте осмотримся">
        </Button>
    </LinearLayout>
   </ScrollView>